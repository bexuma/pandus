<style>
    /* Always set the map height explicitly to define the size of the div
     * element that contains the map. */
    #map {
      height: 300px;
      margin-bottom: 4px;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
  </style>

<div class="container">

  <div class="row">
    <div class="col-md-12">

      <h6 style="margin-top: 40px; margin-bottom: 12px;"><%= @application.address %></h6>
      
      <div id="map"></div>
      <script>
        var map;
        function initMap() {
          map = new google.maps.Map(document.getElementById('map'), {
            center: {
              lat: <%= @application.latitude %>,
              lng: <%= @application.longitude %>
            },
            zoom: 16
          });
          var marker = new google.maps.Marker({
            map: map,
            position: {
              lat: <%= @application.latitude %>,
              lng: <%= @application.longitude %>
            },
          });
          //center: {lat: '<%#= @salon.latitude %>', lng: '<%#= @salon.longitude %>'},
        }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5i6FUaZQfXNsR70D71zm0l6XfiDmCdBw&callback=initMap"
      async defer></script>
    </div>
  </div>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">№</th>
              <th scope="col">Дата</th>
              <th scope="col">Адрес</th>
              <th scope="col">Заявление</th>
            </tr>
          </thead>
         
          <tbody>
            <% @applications.each do |application| %>
              <tr>
                <th scope="row"><%= application.id %></td>
                <td><%= time_ago_in_words(application.created_at) %></td>
                <td><%= application.address %></td>
                <td><%= application.title %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

</div>

