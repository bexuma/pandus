<style>
  #map {
    height: 300px;
    margin-bottom: 4px;
  }
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h6 style="margin-top: 40px; margin-bottom: 12px;">
        <%= @application.address %>
      </h6>
      
      <div id="map"></div>
      <script>
        function initMap() {
          var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 12,
            center: {
              lat: 49.799775,
              lng: 73.114655
            }
          });

          var app = <%= @applications.pluck(:id, :latitude, :longitude) %>
         
          var markers = app.map(function(location, i) {
            return new google.maps.Marker({
              position: {
                lat: location[1],
                lng: location[2]
              },
              label: location[0]
            });
          });

          var markerCluster = new MarkerClusterer(
            map,
            markers,
            {
              imagePath: 'https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m'
            }
          )

        }

      </script>
      <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js">
      </script>
      <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5i6FUaZQfXNsR70D71zm0l6XfiDmCdBw&callback=initMap">
      </script>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">№</th>
        <th scope="col">Дата</th>
        <th scope="col">Адрес</th>
        <th scope="col">Заявление</th>
      </tr>
    </thead>
   
    <tbody>
      <% @applications.each do |application| %>
        <tr>
          <th scope="row"><%= application.id %></td>
          <td><%= time_ago_in_words(application.created_at) %></td>
          <td><%= application.address %></td>
          <td><%= application.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

